{
  "name": "chat-elements",
  "version": "0.0.0",
  "private": true,
  "description": "Chat Web Components",
  "license": "MIT",
  "main": "index.js",
  "workspaces": [
    "components/*"
  ],
  "scripts": {
    "analyze": "lerna run analyze && wca analyze components/*/src/index.js --outFile custom-elements.json",
    "build": "lerna run build --stream --concurrency 1 && npm run storybook:build",
    "clean": "yarn clean:coverage && yarn clean:storybook && yarn clean:pkg && yarn clean:node_modules",
    "clean:coverage": "rimraf ./coverage ./components/*/coverage",
    "clean:node_modules": "lerna clean --yes && rimraf ./yarn.lock",
    "clean:pkg": "rimraf ./components/*/pkg",
    "clean:storybook": "rimraf ./storybook ./components/*/storybook",
    "format": "yarn format:eslint && yarn format:prettier && yarn format:package",
    "format:eslint": "eslint --ext .js,.html,.md,.json . --fix --ignore-path .gitignore",
    "format:package": "sort-package-json package.json components/*/package.json",
    "format:prettier": "prettier \"**/*.+(js|html|md|json)\" --write --ignore-path .gitignore",
    "lint": "yarn lint:eslint && yarn lint:prettier",
    "lint:eslint": "eslint --ext .js,.html,.md,.json . --ignore-path .gitignore",
    "lint:prettier": "prettier \"**/*.+(js|html|md|json)\" --check --ignore-path .gitignore",
    "publish": "lerna publish from-package -- --access public",
    "release": "lerna version --yes && standard-version",
    "start": "es-dev-server --root",
    "storybook": "start-storybook --root",
    "storybook:build": "build-storybook",
    "storybook:build:serve": "es-dev-server --open --app-index ./public/storybook/index.html",
    "test": "karma start --root --coverage",
    "test:changes": "lerna run test --stream --since master",
    "test:prune-snapshots": "karma start --root --prune-snapshots",
    "test:update-snapshots": "karma start --root --update-snapshots",
    "test:watch": "karma start --root --auto-watch=true --single-run=false",
    "preversion": "lerna bootstrap",
    "version": "npm run build",
    "postversion": "npm run deploy"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "npm run test:changes"
    }
  },
  "lint-staged": {
    "*.+(js|html|md|json)": [
      "prettier --write",
      "eslint --fix"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "dependencies": {
    "chalk": "^3.0.0",
    "fs-extra": "^8.0.0",
    "glob": "^7.0.0",
    "path": "^0.12.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@commitlint/config-lerna-scopes": "^8.0.0",
    "@open-wc/demoing-storybook": "^1.0.0",
    "@open-wc/eslint-config": "^2.0.0",
    "@open-wc/prettier-config": "^0.1.0",
    "@open-wc/testing": "^2.0.0",
    "@open-wc/testing-karma": "^3.0.0",
    "es-dev-server": "^1.0.0",
    "eslint": "^6.0.0",
    "eslint-import-resolver-webpack": "^0.12.0",
    "eslint-plugin-json": "^2.1.1",
    "eslint-plugin-markdown": "^1.0.0",
    "husky": "^4.0.0",
    "lerna": "^3.0.0",
    "lint-staged": "^10.0.0",
    "rimraf": "^3.0.0",
    "sort-package-json": "^1.0.0",
    "standard-version": "^8.0.1",
    "web-component-analyzer": "^1.0.0"
  }
}
